@model Product;

<form method="post" asp-action="CreateProducts" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleInputName" class="form-label">Name: </label>
        <!-- asp-for="" ||  name="" -->
        <input type="text" class="form-control" id="exampleInputName" asp-for="Name" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputPrice" class="form-label">Price: </label>
        <input type="number" class="form-control" id="exampleInputPrice" asp-for="Price" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputQuantity" class="form-label">Quantity: </label>
        <input type="number" class="form-control" id="exampleInputQuantity" asp-for="Quantity" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputColor" class="form-label">Color: </label>
        <input type="text" class="form-control" id="exampleInputColor" asp-for="Color" aria-describedby="emailHelp">
    </div>
 <div class="mb-3">
        <label for="exampleInputFileUploadFile" class="form-label">UploadFile : </label>
        <input type="file" class="form-control" id="exampleInputFileUploadFile" asp-for="UploadFile" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label for="date">تاریخ:</label>
        <input type="date" class="form-control" id="Date" name="Date">
    </div>
    <div class="mb-3">
        <label for="exampleInputDescription" class="form-label">Description: </label>
        <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" aria-describedby="emailHelp">
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />

</form>